FROM ubuntu_ssh

RUN apt-get install -y sudo

RUN echo "root:root" | chpasswd

COPY commands.sh /scripts/commands.sh
RUN ["chmod", "777", "/scripts/commands.sh"]

RUN useradd -ms /bin/bash goody
RUN echo "goody:goody" | chpasswd
RUN usermod -aG sudo goody

RUN service ssh start

EXPOSE 22

CMD ["/usr/sbin/sshd","-D"]
ENTRYPOINT ["/scripts/commands.sh"]

